    game.updateObstacles = function (xpos, ypos, i)  {
            //Change xpos and ypos for obstacles
            obstaclesPos[i][0] = xpos;
            obstaclesPos[i][1] = ypos;
            ctx = game.properties.context;
            ctx.fillStyle = game.pieces.obstacles[i].style;
            ctx.fillRect(xpos - xMovement, ypos - yMovement, obstaclesSize[i][0], obstaclesSize[i][1]);
    };
    game.updateLinks = function (xpos, ypos, i)  {
            //Change xpos and ypos for links
            linksPos[i][0] = xpos;
            linksPos[i][1] = ypos;
            ctx = game.properties.context;
            ctx.fillStyle = game.pieces.links[i].style;
            ctx.fillRect(xpos - xMovement, ypos - yMovement, linksSize[i][0], linksSize[i][1]);
    };