{
    "compilerOptions": {
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "target": "ES2022",
        "module": "ES2022",
        "useDefineForClassFields": true,
        "skipLibCheck": true,
    

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,

        "types": ["vite/client", "vitest"],
        "lib": ["ES2022", "DOM", "DOM.Iterable"],

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        "paths": {
            "@/*": ["./resources/js/*"]
        },
    },
    "include": ["resources/js/**/*.ts", "resources/js/**/*.vue", "tailwind.config.js", "eslint.config.ts", "vite.config.ts"],
    "exclude": ["node_modules", "vendor"]
}
