{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "index": {
            "type": "string"
        }
    },
    "required": ["index"],
    "patternProperties": {
        "^.*$": {
            "type": "object",
            "properties": {
                "index": {
                    "type": "string"
                },
                "header": {
                    "type": ["string"]
                },
                "client_events": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": ["InventoryChangedEvent"]
                    }
                },
                "server_events": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": ["has"]
                            },
                            "event": {
                                "type": "string"
                            },
                            "results": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "option_values": {
                                "type": ["object", "string"]
                            }
                        },
                        "required": ["event", "type"],
                        "additionalProperties": false
                    }
                },
                "options": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "person": {
                                "type": "string"
                            },
                            "text": {
                                "type": "string"
                            },
                            "next_key": {
                                "type": "string",
                                "enum": [
                                    "Q",
                                    "q",
                                    "r",
                                    "S",
                                    "end",
                                    "r1",
                                    "r2",
                                    "r3",
                                    "r4",
                                    "r5"
                                ]
                            },
                            "conditional": {
                                "type": ["string", "null"]
                            },
                            "replacers": {
                                "type": "object",
                                "patternProperties": {
                                    "^.*$": {
                                        "type": "string"
                                    }
                                }
                            },
                            "container": {
                                "type": "string",
                                "enum": ["A", "B"]
                            },
                            "client_callback": {
                                "type": ["string", "null"]
                            },
                            "option_values": {
                                "type": ["object"]
                            },
                            "id": {
                                "type": ["number"]
                            }
                        },
                        "required": ["text", "next_key", "id"],
                        "additionalProperties": false
                    },
                    "additionalProperties": false
                }
            },
            "oneOf": [
                {
                    "required": ["options"]
                },
                {
                    "required": ["server_events"]
                }
            ],
            "additionalProperties": false,
            "required": ["index"]
        }
    },
    "additionalProperties": false
}
